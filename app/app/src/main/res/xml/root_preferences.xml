<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Кто вы?">

        <EditTextPreference
            android:id="@+id/field_nick"
            app:key="nickname"
            app:title="Ваш ник"
            app:useSimpleSummaryProvider="false" />

        <EditTextPreference
            android:id="@+id/field_full_name"
            app:key="fullname"
            app:title="Как вас зовут?"
            app:useSimpleSummaryProvider="false" />

        <EditTextPreference
            android:id="@+id/field_bio"
            app:key="biography"
            app:title="О себе..."
            app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Хотите нас покинуть?">
        <Preference
            android:key="deleteButton"
            android:layout="@layout/preference_buttons" />
    </PreferenceCategory>

</PreferenceScreen>