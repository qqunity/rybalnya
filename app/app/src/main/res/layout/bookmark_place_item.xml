<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/textView3"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:text="Метка"
        android:textAlignment="center" />

    <com.example.rybalnya.utils.ExpandableTextView
        android:id="@+id/place_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/place_name"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:hint="Эх...Жаль, но тут пусто"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/lat"
        android:text="Широта:" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/button_copy"
        android:text="54.12054" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/lon"
        android:text="Долгота:" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lat"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/button_copy"
        android:text="51.12054" />

    <ImageButton
        android:id="@+id/button_copy"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="?attr/selectableItemBackground"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@drawable/ic_copy" />

</RelativeLayout>
